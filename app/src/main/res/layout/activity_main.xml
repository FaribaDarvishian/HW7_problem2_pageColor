<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/color_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txt_Red"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#E53935"
            android:gravity="center"
            android:text="RED"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txt_Orange"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#F57C00"
            android:gravity="center"
            android:text="ORANGE"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_Yellow"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFFF00"
            android:gravity="center"
            android:text="YELLOW"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txt_Green"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#76FF03"
            android:gravity="center"
            android:text="GREEN"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txt_Blue"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#0260FF"
            android:gravity="center"
            android:text="BLUE"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txt_Indigo"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="#6A1B9A"
            android:gravity="center"
            android:text="INDIGO"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_Violet"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#EA80FC"
            android:gravity="center"
            android:text="VIOLET"
            android:textSize="20dp" />

    </LinearLayout>

</ScrollView>